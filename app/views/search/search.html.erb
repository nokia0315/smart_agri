<% if @datas.empty? %>
  <h2>該当する商品はありません</h2>
<% end %>
  <% @datas.each do |data| %>
    <div>
     <% if user_signed_in? %>
      <%= link_to users_job_offer_path(data.id) do %>
        <%= attachment_image_tag data, :image_id, size: "190x150", class: "img_hover" %><br>
      <% end %>
     <% elsif farmer_signed_in? %>
      <%= link_to farmers_job_offer_path(data.id) do %>
        <%= attachment_image_tag data, :image_id, size: "190x150", class: "img_hover" %><br>
      <% end %>
     <% else %>
      <%= link_to admins_job_offer_path(data.id) do %>
        <%= attachment_image_tag data, :image_id, size: "190x150", class: "img_hover" %><br>
      <% end %>
     <% end %>

      <p><%=  data.title %></p><br>
      <p>￥<%= data.reward %></p>
    </div>
  <% end %>