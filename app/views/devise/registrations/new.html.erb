<div class="row">
  <div class="col-xs-offset-1 col-xs-11">
    <h2 class="head-line title_h2"><i class="fas fa-user-edit"></i>新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group col-xs-12">
        <%= f.label :"名前", class: "col-sm-2 control-label" %>
        <%= f.label :"(姓)", class: "col-sm-2 control-label" %>
        <%= f.text_field :first_name, autofocus: true, class: "col-sm-2 form-control-static name" %>
        <%= f.label :"(名)", class: "col-sm-2 control-label" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-sm-2 form-control-static name" %>
      </div>

      <div class="field form-group col-xs-12">
        <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
        <%= f.label :"(セイ)", class: "col-sm-2 control-label" %>
        <%= f.text_field :kana_first_name, autofocus: true, class: "col-sm-2 form-control-static name" %>
        <%= f.label :"(メイ)", class: "col-sm-2 control-label" %>
        <%= f.text_field :kana_last_name, autofocus: true, class: "col-sm-2 form-control-static name" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
        <%= f.text_field :email, class: "col-sm-6 form-control-static"%>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"郵便番号", autofocus: true, class: "col-sm-4 control-label" %>
        <%= f.text_field :postal_code, class: "col-sm-4 form-control-static postal_code" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"住所", class: "col-sm-2 control-label" %>
         <%= f.text_field :residence, autofocus: true, class: "col-sm-8 form-control-static address" %>
      </div>

      <div class="form-group col-xs-9">
        <%= f.label :"電話番号", class: "col-sm-4 control-label" %>
        <%= f.text_field :phone_number, class: "col-sm-4 form-control-static" %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"パスワード(6文字以上)", class: "col-sm-4 control-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"パスワード(確認用)", class: "col-sm-4 control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
      </div>

      <div class="actions col-xs-9 text-center">
        <%= f.submit "新規登録",class: 'btn btn-success btn-lg col-xs-7' %>
      </div>
    <% end %>

     <div class="col-xs-9">
      <h3 class="head-line title_h2">既に登録済みの方</h3>
      <p class="new-link"><%= link_to "会員", new_user_session_path %><br><%= link_to "農業者", new_farmer_session_path %><br><%= link_to "管理者", new_admin_session_path %>からログインしてください。</p>
    </div>
  </div>
</div>
