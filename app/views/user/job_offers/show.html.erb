<div class="container">
	<div class="row">
	  <div class="col-md-4">
	     <%#= attachment_image_tag @job_offer, :job_offers_image, size: "250x250", fallback: "no_image.jpg" %>
    </div>
    <div class="col-md-8">
      <div class="field">
				<p>
					タイトル     <%= @job_offer.title %>
				</p>
      </div>
	    <div class="field">
				<p>
					説明    <%= @job_offer.explanation %>
				</p>
	    </div>
	    <div class="field">
				<p>
					報酬    <%= @job_offer.reward %>
				</p>
	    </div>

	    <div class="field">
				<p>
					販売ステータス     <%= @job_offer.is_valid %>
				</p>
	    </div>
	    <div class="field">
				<p>
					農業者          <%= link_to @job_offer.farmer.first_name, users_farmer_path(@job_offer.farmer.id) %>
				</p>
	    </div>
	    <% if @job_offer.favorited_by?(current_user) %>
    <p>
      <%= link_to users_job_offer_favos_path(@job_offer), method: :delete do %>
        ♥<%= @job_offer.favos.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to users_job_offer_favos_path(@job_offer), method: :post do %>
        ♡<%= @job_offer.favos.count %> いいね
      <% end %>
    </p>
  <% end %>
      <div class="actions col-md-9">
    	  <%= link_to "一覧に戻る", users_job_offers_path, class: "glyphicon glyphicon-pencil btn btn-success pull-right" %>
      </div>
  	</div>
	</div>
</div>