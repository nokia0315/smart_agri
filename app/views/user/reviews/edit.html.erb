<!-- 口コミ入力フォーム -->
<%#= form_for(@review, :url => users_farmer_review_path(@review)) do |f| %>

<%= form_with model: @review, :url => users_farmer_review_path(@review), local:true do |f| %>
<%= @review.inspect %>
  <!--エラーメッセージ-->
  <%#= render 'layouts/error_messages', model: f.object %>

  <!-- タイトル -->
  <div class="form-group row">
    <%= f.label :title, 'タイトル ', class:'col-md-3 col-form-label' %>
    <div class="col-md-9">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <!-- 評価 -->
  <div class="form-group row">
    <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
    <%= f.hidden_field :rate, id: :review_star %>

    <div id="star-rate"></div>
   <script>
          $('#star-rate').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            score: <%= @review.rate %>,
            scoreName: 'review[rate]',
          });
   </script>
  </div>

  <!-- 口コミ -->
  <div class="form-group row">
    <%= f.label :explanation, '口コミ内容 ', class:'col-md-3 col-form-label' %>
    <div class="col-md-9">
      <%= f.text_area :explanation, class: "form-control", rows: "8",
        placeholder:'口コミ内容がなくても、タイトルと評価のみで投稿できます。
まずは投稿してみましょう！投稿してから編集もできますよ！' %>
    </div>
  </div>

  <!-- 確認ボタン -->
  <div class="form-group row justify-content-end">
    <div class="col-md-9">
      <%= f.submit '変更を保存', class:"btn btn-success" %>
    </div>
  </div>

<% end %>
<!-- /口コミ入力フォーム -->