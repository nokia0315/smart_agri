<div class="container-box">
  <div class="row pt-5">
    <div class="review-form col-md-10 mx-auto">
      <!--エラーメッセージ-->
      <%#= render 'layouts/error_messages', model: f.object %>
      <!--農業者コードの送信-->
      <%#= f.hidden_field :@farmer %>

      <h2 class="head-line title_h2 text-center">レビュー投稿</h2><br><br>
      <!-- 口コミ入力フォーム -->
      <%= form_with model: @review, url: users_farmer_reviews_path, local: true do |f| %>
      <!-- タイトル -->
      <div class="form-group row">
        <%= f.label :title, 'タイトル ', class:'col-md-3 col-form-label font-weight-bold' %>
        <div class="col-md-9">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <!-- 評価 -->
      <div class="form-group row" id="star">
        <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label font-weight-bold' %>
        <%#= f.hidden_field :rate, id: :review_star %>
      </div>
      <!-- 評価javascript -->
      <script>
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'review[rate]',
        half: true,
      });
      </script>

      <!-- 口コミ -->
      <div class="form-group row">
        <%= f.label :explanation, '口コミ内容 ', class: 'col-md-3 col-form-label font-weight-bold' %>
        <div class="col-md-9">
          <%= f.text_area :explanation, class: "form-control", rows: "8",placeholder:'口コミ内容がなくても、タイトルと評価のみで投稿できます。まずは投稿してみましょう！投稿してから編集もできますよ！' %>
        </div>
      </div>

        <div for="inputImage col-md-9">
        <%= f.attachment_field :image, placeholder: "プロフィール画像", class: "col-md-3 offset-md-5 col-form-label font-weight-bold" %><br>
        <%= attachment_image_tag @review, :image, size: "250x250", fallback: "no_image.jpg", class: "d-block mx-auto"%>
        </div>

      <!-- 確認ボタン -->
      <div class="form-group row justify-content-end mt-5">
        <div class="col-md-9 text-center">
          <%= f.submit '投稿する', class:"btn btn-success btn-block" %><br>
        </div>
      </div>

    <% end %>
    <!-- /口コミ入力フォーム -->
    </div>
  </div>
</div>