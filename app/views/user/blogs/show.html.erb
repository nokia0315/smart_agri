<h2 class="job_offer-headline head-line title_h2 text-center"><%= @blog.title %></h2><br><br>
<div class="row">
  <div class="col-md-3">
    <%= attachment_image_tag @blog, :image, fallback: "no_image.jpg", size: '300x300' %>
  </div>
  <div class="col-md-9 text-center">
    <p>ユーザーネーム：<%= @blog.farmer.first_name %></p>
    <p>投稿日時：<%= @blog.created_at.strftime('%Y/%m/%d') %></p>
    <p><%= @blog.explanation %></p>
  </div>

</div>