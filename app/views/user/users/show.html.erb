<div class="row">
	<div class="col-xs-offset-1 col-xs-8">
		<h2 class="head-line text-center title_h2"><%= @user.first_name %><%= @user.last_name %>さんのマイページ</h2>
		<p><strong class="information-link"><i class="far fa-user"></i>登録情報</strong><br>
			<% if @user == current_user %>
 				<%= link_to "編集する", edit_user_path(@user),class: "glyphicon glyphicon-pencil btn btn-success"  %><br>
  			<%= link_to "パスワードを変更する", edit_user_registration_path, class: "glyphicon glyphicon-pencil btn btn-warning" %>
 			<% end %>
 		</p>
		<table class="table table-bordered table-condensed" >
			<tbody>
				<tr>
					<td class="info">氏名</td>
					<td class="text-left"><%= @user.first_name %><%= @user.last_name %></td>
				</tr>
				<tr>
					<td class="info">カナ</td>
					<td class="text-left"><%= @user.kana_first_name %><%= @user.kana_last_name %></td>
				</tr>
				<tr>
					<td class="info">郵便番号</td>
					<td class="text-left"><%= @user.postal_code %></td>
				</tr>
				<tr>
					<td class="info">住所</td>
					<td class="text-left"><%= @user.residence %></td>
				</tr>
				<tr>
					<td class="info">電話番号</td>
					<td class="text-left"><%= @user.phone_number %></td>
				</tr>
				<tr>
					<td class="info">メールアドレス</td>
					<td class="text-left"><%= @user.email %></td>
				</tr>
			</tbody>
		</table>