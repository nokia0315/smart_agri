<% provide(:title, "ジャンル編集") %>
<div class="row">
  <div class="col-md-12">
    <h2 class="head-line title_h2 text-center" >ジャンル編集</h2><br><br><br>

  <% if @genre.errors.any? %>
    <%= render "layouts/error_messages", resource: @genre %>
  <% end %>
 </div>
<div class="col-md-10 offset-md-3">
  <%= form_for @genre, :url => {:action => :update} do |f| %>
  <div>
    ジャンル
      <%= f.text_field :name  %>
      <%= f.radio_button :is_valid, true %>
      <%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>
      <%= f.radio_button :is_valid, false %>
      <%= f.label :is_valid, "無効", {value: :false, style: "display: inline-block;"} %>
      <%= f.submit "変更を保存する", class: "btn btn-info" %>
    </div>
  <% end %>
</div>

<br><br>
  <div class="col-md-12 offset-md-3">
    <%#= link_to "戻る", administrator_genres_path, class: "glyphicon glyphicon-home btn-lg btn-info" %>
  </div>
 </div>
</div>