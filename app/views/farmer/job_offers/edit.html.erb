<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h3>求人編集</h3>
  </div>
</div>

<%= form_with model: @job_offer, :url => farmers_job_offer_path(@job_offer), local:true do |f| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
  			<%#= attachment_image_tag @product, :products_image, src: "", size: "300x250", id: "preview", fallback: "no_image.jpg" %>
      <div class="field">
        <%#= f.attachment_field :products_image, placeholder: "商品画像", style: "padding: 15px;", onchange: "expressFile()" %>
      </div>
    </div>
    <div class="col-md-5">
      <div class="field row control-rabel-bottom">
        <%= f.label :title, "商品名", class:"control-label-1" %>
        <%= f.text_field :title, class:'control-form' %>
      </div>
      <div class="field row control-rabel-bottom">
        <%= f.label :explanation, "商品説明", class:"control-label" %>
        <%= f.text_area :explanation, class:'control-form' %>
      </div>
      <div class="field row control-rabel-bottom">
        <%= f.label :genre_id, "ジャンル", class:"control-label" %>
        <%= f.collection_select(:genre_id, @genres, :id, :name) %>
      </div>
      <div class="field row control-rabel-bottom">
        <%= f.label :reward, "税抜価格", class:"control-label" %>
        <%= f.text_field :reward, class:'control-form' %>
      </div>
      <div class="field row control-rabel-bottom">
        <%= f.label :is_valid, "販売ステータス", class:"control-label-2" %>
        <%= f.select :is_valid, [["募集中", "募集中"], ["締め切り", "締め切り"]], class:"control-label" %>
      </div>
      <br>
      <div class="actions row n-btn">
        <%= f.submit '変更を保存', class:'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>